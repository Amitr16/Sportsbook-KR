# GoalServe Sports Betting Platform - PostgreSQL Configuration
# Copy this to .env to use PostgreSQL

# Flask Configuration
SECRET_KEY=your-super-secure-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=goalserve_sportsbook
POSTGRES_USER=postgres
POSTGRES_PASSWORD=admin
DATABASE_URL=postgresql://postgres:admin@localhost:5432/goalserve_sportsbook

# Database Connection Pool Settings (recommended for production)
# Pool headroom for high tenant loads
# Process-specific pool sizes (for scalability)
PROCESS_TYPE=web
DB_WEB_POOL_MAX=70
DB_WORKER_POOL_MAX=5

# Shared settings
DB_MAX_CONN=70
DB_MIN_CONN=5
DB_CONN_TIMEOUT=5
DB_IDLE_TIMEOUT=60
# Legacy settings (kept for backward compatibility)
DB_POOL_MIN=5
DB_POOL_MAX=30
DB_POOL_TIMEOUT=5
DB_POOL_MAX_LIFETIME=1800
DB_POOL_MAX_IDLE=60

