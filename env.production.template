# Production environment for Fly.io deployment
# Copy this to env.production and fill in your actual values

# Flask Configuration
FLASK_ENV=production
IS_PRODUCTION=true
IS_LOCAL=false
HOST=0.0.0.0
PORT=8080
DEBUG=false

# Database Configuration
# Replace with your actual Fly.io PostgreSQL database URL
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://your-app-name.fly.dev/auth/google/callback

# CORS Configuration
CORS_ORIGINS=["https://your-app-name.fly.dev","https://your-frontend-domain.com"]

# Socket.IO Configuration
SOCKET_ALLOWED_ORIGINS=["https://your-app-name.fly.dev","https://your-frontend-domain.com"]

# Security
SECRET_KEY=your_super_secret_key_here

# Cache Configuration
CACHE_TTL_SEC=180
MAX_EVENTS_PER_SPORT=2000

# Memory Management
MEM_SOFT_LIMIT_MB=1400
WEB_WORKERS=1
WEB_THREADS=1
GUNICORN_PRELOAD=false

# Casino Configuration
CASINO_ENABLED=true
CASINO_API_URL=https://your-app-name.fly.dev

# Disable local env override
IGNORE_ENV_LOCAL=1
