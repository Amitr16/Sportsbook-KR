# Environment configuration for local vs Fly.io deployment
# Copy this to .env and modify as needed

# Environment
FLASK_ENV=development
IS_PRODUCTION=false
IS_LOCAL=true

# Server configuration
HOST=0.0.0.0
PORT=8000

# Database configuration (local Docker Postgres)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sportsbook
DATABASE_TYPE=postgresql

# Redis configuration (local Docker Redis)
REDIS_URL=redis://localhost:6379/0

# CORS origins for local development
CORS_ORIGINS=["http://localhost:5000","http://127.0.0.1:5000","http://localhost:8000","http://127.0.0.1:8000"]

# Socket.IO allowed origins
SOCKET_ALLOWED_ORIGINS=["http://localhost:5000","http://127.0.0.1:5000","http://localhost:8000","http://127.0.0.1:8000"]

# Goalserve API configuration
GOALSERVE_API_KEY=demo-key
GOALSERVE_BASE_URL=https://www.goalserve.com/getfeed

# Mock feed configuration (for local development without hammering Goalserve)
USE_MOCK_FEED=false
MOCK_FEED_DIR=mock_feeds

# Bet settlement configuration
SETTLEMENT_CHECK_INTERVAL=30

# Flask secret key
SECRET_KEY=dev-secret-key-change-in-production

# Debug mode
DEBUG=true
